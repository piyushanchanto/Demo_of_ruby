<center>
Enter Student Information
<hr>
<%= form_for @student do |f| -%>
  First Name: <%= f.text_field :firstname %><br />
  Last Name: <%= f.text_field :lastname %><br />
  <%= f.submit "Send" %>	
<% end -%>



<hr><br /><br /><br />
Display All Student Record <br />
<hr>
<table border =2 width=25%>
	<th>First Name</th><th>Last Name</th>
<% if !@students.blank? %>
  <% for item in @students %>
    <tr><td><%= item.firstname %></td><td><%= item.lastname %></td></tr>
  <% end %>
<% else %>
  </table>
</center>

<% end %>
